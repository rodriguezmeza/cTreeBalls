NB_R = 60
R_MAX = 150.
#E
#Logarithmic binning
N_LOGINT = 5
#Behavior options
DEFINEOPTIONS = -D_VERBOSE -D_LONGIDS
# Mar
#DEFINEOPTIONS += -D_HAVE_OMP #Comment this out if you don't have the OpenMP headers
#DEFINEOPTIONS += -D_LOGBIN
### End of user-definable stuff
