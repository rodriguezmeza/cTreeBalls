ifeq ($(ADDONS_ON),1)
ADDONSDIR = ../addons
HEADERFILES = $(wildcard $(ADDONSDIR)/*.h)
ADDONS = addons
vpath %.c $(ADDONS)
INCLUDES += -I$(ADDONSDIR)
INCLUDES += -I$(ADDONSDIR)/addons_include
