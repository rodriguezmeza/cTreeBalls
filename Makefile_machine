MDIR := $(shell pwd)
WRKDIR = $(MDIR)/build

.base:
	if ! [ -e $(WRKDIR) ]; then mkdir $(WRKDIR) ; mkdir $(WRKDIR)/lib; fi;
	touch build/.base

vpath %.c source:general_libs:main
vpath %.o build
vpath .base build

#B LINES TO ADAPT TO YOUR PLATFORM
#
#--------------------------------------------
