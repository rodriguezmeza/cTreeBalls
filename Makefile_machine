# To activate float real set to 1. Else 0
SINGLEPON = 0
#
ifeq ($(SINGLEPON),1)
SINGLEP = -DSINGLEP
OPT2 += $(SINGLEP)
endif
#

#
KAPPAAVGON = 0
#
ifeq ($(KAPPAAVGON),1)
KappaAvgON = -DKappaAvgON
OPT2 += $(KappaAvgON)
endif
#

# To activate long integers set to 1. Else 0
LONGINTON = 1
#
ifeq ($(LONGINTON),1)
LONG = -DLONGINT
OPT2 += $(LONG)
endif
#

#
#   will be deprecated...
PTOPIVOTROTATIONON = 0
ifeq ($(PTOPIVOTROTATIONON),1)
OPT2 += -DPTOPIVOTROTATION
endif
